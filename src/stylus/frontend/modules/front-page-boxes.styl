.frontpage {
  grid-area: content;
  // grid-area: content / content / s-content / s-content;
  @media (max-width 991px) {
    grid-area: content / content / pagination / pagination;
  }
  @media (max-width 768px) {
    grid-area: content / content / pagination / pagination;
  }
  .frontpage-data {
    margin: 0 !important;
    height: 100%;
    &__box {
      padding: 1.2rem 2.4rem 1.2rem 0 !important;
      @media (min-width 1450px) {
        padding: 2rem 4rem 2rem 0 !important;
      }
      @media (max-width 991px) {
        padding: 1rem 2rem 4rem 2rem !important;
      }
      @media (max-width 768px) {
        padding: 0 3rem 4rem 3rem !important;
      }   
      &--content {
        position: relative;
        width: 100%;
        height: 100%;
        background-color: $white;
        transition: all .3s;
        &:hover{
          box-shadow: 5px 18px 30px #0000001A;
        }
        @media (max-width 576px) {
          width: 77%;
          height: 14rem;
          margin: 0 auto;
        }
        &-title {
          font-family: Open Sans Bold;
          position: absolute;
          z-index: 2;
          top: 3rem;
          left: 2.5rem;
          color: $font_primary_color;
          white-space: nowrap;
          @media (min-width 1550px) {
            font-size: 2.3rem;
          }
          @media (max-width 576px) {
            top: 2rem;
          }
        }
        &-quantity {
          font-family: Open Sans Bold;
          font-size: 5.5rem;
          position: absolute;
          z-index: 2;
          top: 6rem;
          left: 2.5rem;
          color: $main_green;
          @media (min-width 1450px) {
            font-size: 5.9rem;
            top: 6.5rem;
          }
          @media (max-width 576px) {
            font-size: 5rem;
            top: 5rem;
          }
        }
        &-image {
          position: absolute;
          right: 0;
          top: 43%;
          transform: translate(0, -50%);
          z-index: 1;
        }
        &-link {
          position: absolute;
          z-index: 2;
          bottom: 2rem;
          right: 1.3rem;
          width: 2.9rem;
          height: 2.9rem;
          background-image: url('../img/arrow.svg');
          background-size: 100%;
          background-repeat: no-repeat;
          background-position: center;
        }
      }
    }
  }
}