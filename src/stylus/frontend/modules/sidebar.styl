aside{
  background-color: $main_green;
  position: relative;
  @media (max-width 768px) {
    position: fixed;
    z-index: 10;
    width: 100%;
  } 
  .nav__logo {
    margin: 1rem auto 1.5rem auto;
    width: 20.8rem;
    height: 10rem;
    background-image: url('../img/gm_logo.svg');
    background-size: 100%;
    background-repeat: no-repeat;
    background-position: center;
    @media (max-width 1048px) {
      width: 16rem;
      height: 10rem;
    }
    @media (max-width 768px) {
      margin: 1rem 0 0.5rem 2.2rem;
      width: 15rem;
      height: 5rem;
    }
    @media screen and (max-height: 768px) and (min-width: 1024px){
      margin: 1rem auto 0 auto;
    }
  }
  nav {
    flex-direction: column;
    @media (max-width 768px) {
        height: 100vh;
        position: absolute;
        padding-top: 6rem;
        border-top: 2px solid $background;
        right: 0;
        background-color: $main_green;
        z-index: 30;
        width: 0;
        opacity: 0;
        visibility: hidden;
        transition: all .4s;
    }    
    .nav__link {
      cursor: pointer;
      text-decoration: none;
      color: $white;
      width: 100%;
      height: 7rem;
      padding-left: 4rem;
      font-family: Open Sans Bold;
      font-size: 2.4rem;
      transition: all .2s;
      &:hover {
        background-color: $hover_green;
      }
      @media (min-width 1450px) {
        padding-left: 5rem;
        height: 7.8rem;
        font-size: 2.55rem;
      }
      @media (max-width 1048px) {
        padding-left: 3rem;
        font-size: 2rem;
      }
      @media (max-width 768px) {
        justify-content: flex-end !important;
        font-size: 2.4rem;
        padding: 0 6rem;
      }
      @media (max-width 576px) {
        padding: 0 4rem;
      }
    }
    .nav__contact-box {
      width: 100%;
      height: 28%;
      padding: 2rem 0 0 4rem;
      position: absolute;
      bottom: 0;
      background-color: $hover_green;
      @media (min-width 1450px) {
        padding-left: 5rem;
      }
      @media (max-width 1048px) {
        padding-left: 3rem;
      }
      @media (max-width 768px) {
        height: 30rem;
        display: flex;
        flex-direction: column;
        align-items: flex-end;
        padding: 2rem 6rem;
      }
      @media (max-width 576px) {
        padding: 2rem 3rem;
      }
      &--title{
        font-family: Open Sans Bold;
        font-size: 2rem;
        margin: 2rem 0 1.2rem 0;
        @media (max-width 768px) {
          margin: 2rem 0 1.5rem 0;
        }
      }
      &--person, &--email, &--number {
        padding: .25rem 0;
        @media (max-width 1048px) {
          font-size: 1.3rem;
        }
        @media (max-width 768px) {
          font-size: 1.5rem;
        }
      }
      &--email {
        color: $font_primary_color;
      }
    }
    .active {
      background-color: $hover_green;
    }
  }
  .nav__checkbox {
    display: none;
  }
  .nav__checkbox:checked ~ .navigation {
    width: 70%;
    opacity: 1;
    visibility: visible;
    transition: width .4s;
      @media (max-width 576px) {
        width: 80%;
      }
  }
  .nav__checkbox:checked ~ .navigation .nav__contact-box {
    transition-delay: .1s;
  }
  .nav__checkbox:checked + .nav__button .nav__button--icon {
    background-color: transparent;
  }
  .nav__checkbox:checked + .nav__button .nav__button--icon::before {
    transform: rotate(135deg);
    top: 0;
  }
  .nav__checkbox:checked + .nav__button .nav__button--icon::after {
    transform: rotate(-135deg);
    top: 0;
  }
  .nav__button {
    display: none;
    @media (max-width 768px) {
      display: block;
      cursor: pointer;
      background-color: $background;
      height: 4.3rem;
      width: 4.3rem;
      position: absolute;
      top: 50%;
      transform: translate(-50%, -50%);
      right: 3.5rem;
      border-radius: 50%;
      z-index: 10;
      text-align: center;
    }
    @media (max-width 576px) {
      right: 2.5rem;
      height: 4rem;
      width: 4rem;
    }
    &--icon {
      position: absolute;
      top: 50%;
      transform: translate(-50%, -50%);
      &,
      &::before,
      &::after {
        width: 2.6rem;
        height: 3px;
        background-color: $font_primary_color;
        display: inline-block;
        @media (max-width 576px) {
          width: 2.3rem;
        }
      }
      &::before,
      &::after {
        content: '';
        position: absolute;
        left: 0;
        transition: all .2s;
      }
      &::before {top: -.8rem;}
      &::after {top: .8rem;}
    }
  }
}